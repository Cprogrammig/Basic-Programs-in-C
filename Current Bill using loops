/*Current Bill using loops*/
#include<stdio.h>
int main()
{
	int u,y;
	float c;
	printf("Enter no of units consumed:");
	scanf("%d",&u);
	if(u<=200)
	c=u*0.50;
	else if(u<=400)
	{
	     y=u-201;
         c=y*0.65+100;
    }
	else if(u<=600)
	{
		 y=u-401;
		 c=y*0.80+230;
	}
	else
	{
		y=u-601;
		c=y*1.00+390;
	}
	printf("Rate of charge:%.2f",c);
	return 0;
}
